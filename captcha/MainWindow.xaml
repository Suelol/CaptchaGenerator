<Window x:Class="captcha.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:captcha"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        
        <Grid Width="500" Height="300">
            <StackPanel Orientation="Horizontal" Name="SPanelSymbols" HorizontalAlignment="Center" VerticalAlignment="Center">

            </StackPanel>
            <Canvas Name="CanvasNoise"></Canvas>
        </Grid>
        <TextBox x:Name="TxtCapch" BorderBrush="Black" BorderThickness="1"  Height="50" Width="200" Margin="0 150 0 0"/>
        <Button  x:Name="BtnButton" Click="BtnButton_Click" Content="Проверить" Height="50" Width="auto" Margin="0 300 0 0"/>
        <Button x:Name="BtnUpdateCaptcha" VerticalAlignment="Bottom" Click="BtnUpdateCaptcha_Click">Обновить капчу</Button>
    </Grid>
</Window>
